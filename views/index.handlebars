<h2>Recent posts</h2>
<div class="card-columns">

  {{#each posts}}
  <div class='card text-center mt-4' id="format">
    <div class="card-body">
      <h3 class="card-title">{{title}}</h3>
      <p class="card-text">{{description}}</p>
      <a href="/post/{{slug}}" class="btn btn-info btn-sm" >Read more</a>
    </div>
    <div class="card-footer">
      <small class="text-muted">Category: {{category.name}}</small><br>
      <small class="text-muted">Publish date: {{#formatDate date}}{{/formatDate}}</small>
    </div>
  </div>

  {{else}}
  <h5> No posts </h5>

  {{/each}}
</div>

